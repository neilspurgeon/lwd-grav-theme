{% extends 'partials/base.html.twig' %}

  {% block content %}
  <div class="project-container">

    <div class="project-info">
      <div class="footer-push">
        <h1 class="client">{{ page.header.client }}</h1>
        <h2 class="title">{{ page.title }}</h2>

        {{ page.header.description | markdown   }}


        {% if page.header.related_work %}
          <ul>
            <h3>Related Work</h3>
            {% for p in page.header.related_work %}
              <li><a href="{{ base_url ~ p.url }}">{{ p.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <footer class="lg-footer">
        <p>
          <a href="mailto:hello@itsleewilliams.com">hello@itsleewilliams.com</a><br />
          © Lee Williams 2016<br />
        </p>
      </footer>

    </div>

    <div class="horizontal-scroll">

      <section class="images">
        {% for img in page.header.images %}
        {% endfor %}
      </section>

    </div>

    <footer class="sm-footer">
      <p>
        <a href="mailto:hello@itsleewilliams.com">hello@itsleewilliams.com</a><br />
        © Lee Williams 2016<br />
      </p>
    </footer>


</div>
  {% endblock %}
